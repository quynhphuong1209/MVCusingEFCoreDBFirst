@model MVCusingEFCoreDBFirst.Models.NewsType

@{
    ViewData["Title"] = "Delete";
}

<style>
    .form-group {
        margin-left: 20px;
        margin-right: 20px;
        margin-top: 20px;
    }
</style>


<div class="kt-container  kt-container--fluid  kt-grid__item kt-grid__item--fluid" style="margin-top:-30px">
    <div class="row">
        <div class="col-md-12">

            <div class="kt-portlet">
                <div class="kt-portlet__head">
                    <div class="kt-portlet__head-label">
                        <h3 class="kt-portlet__head-title">
                            Bạn có chắc chắn muốn xoá thông tin này không?
                        </h3>
                    </div>
                </div>
            


           <form asp-action="Delete">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="Name" class="control-label">Tên loại</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label">Mô tả</label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Sort" class="control-label">Sắp xếp</label>
                    <input asp-for="Sort" class="form-control" />
                    <span asp-validation-for="Sort" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DateCreated" class="control-label">Ngày tạo</label>
                    <input asp-for="DateCreated" class="form-control" />
                    <span asp-validation-for="DateCreated" class="text-danger"></span>
                </div>
            </form>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Delete" class="btn btn-danger ml-4 mb-3" /> &nbsp
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Back to List" class="btn btn-primary mb-3" />
                </form>
            </div>
        </div>
    </div>
</div>




