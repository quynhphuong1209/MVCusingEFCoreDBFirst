@model MVCusingEFCoreDBFirst.Models.News

@{
    ViewData["Title"] = "Delete";

}

<style>
    .form-group {
        margin-left: 20px;
        margin-right: 20px;
        margin-top: 20px;
    }
</style>

<div class="kt-container  kt-container--fluid  kt-grid__item kt-grid__item--fluid" style="margin-top:-30px">
    <div class="row">
        <div class="col-md-12">

            <!--begin::Portlet-->
            <div class="kt-portlet">
                <div class="kt-portlet__head">
                    <div class="kt-portlet__head-label">
                        <h3 class="kt-portlet__head-title">
                            Bạn có chắc chắn muốn xoá thông tin này không?
                        </h3>
                    </div>
                </div>
            

            <form asp-action="Delete">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="Title" class="control-label">Tiêu đề</label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                    <div class="form-group row">
                        <div class="col-lg-6 form-group-sub pl-0">
                            <label asp-for="Author" class="form control-label">Tác giả</label>
                            <input asp-for="Author" class="form-control" />
                            <span asp-validation-for="Author" class="text-danger"></span>
                        </div>

                        <div class="col-lg-6 form-group-sub pr-0">
                            <label asp-for="TypeId" class="form control-label"></label>
                            <select asp-for="TypeId" class="form-control" asp-items="@ViewBag.Type"></select>
                        </div>
                    </div>

                <div class="form-group">
                    <label asp-for="Summary" class="control-label">Tóm tắt</label>
                    <textarea asp-for="Summary" class="form-control" rows="5"></textarea>
                    <span asp-validation-for="Summary" class="text-danger"></span>
                </div>

            </form>

            <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Delete" class="btn btn-danger ml-4 mb-3" /> &nbsp
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Back to List" class="btn btn-primary mb-3" />
            </form>
            </div>
        </div>
    </div>
</div>
    


